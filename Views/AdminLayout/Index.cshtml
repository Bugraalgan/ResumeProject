@{
    Layout = null;
    // O anki URL'in hangi Controller'da olduğunu yakalıyoruz
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}

<!DOCTYPE html>
<html class="dark" lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Developer Portfolio Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <script id="tailwind-config">
        tailwind.config = { darkMode: "class", theme: { extend: { colors: { "primary": "#197fe6", "background-light": "#f6f7f8", "background-dark": "#181818", "sidebar-dark": "#121212", "card-dark": "#222222", }, fontFamily: { "display": ["Inter"] }, borderRadius: { "DEFAULT": "0.25rem", "lg": "0.5rem", "xl": "0.75rem", "full": "9999px" }, }, }, }
    </script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .sidebar-item-active {
            background-color: rgba(25, 127, 230, 0.1);
            border-right: 3px solid #197fe6;
        }

        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 300, 'GRAD' 0, 'opsz' 24;
            color: #2dd4bf;
        }
        /* Aktif ikon için stil */
        .active-icon {
            font-variation-settings: 'FILL' 1 !important;
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark text-slate-900 dark:text-slate-100 flex min-h-screen overflow-hidden">

    <aside class="w-64 bg-sidebar-dark border-r border-slate-800 flex flex-col fixed inset-y-0 left-0 z-50">
        <div class="p-6 flex items-center gap-3">
            <div class="size-8 bg-primary rounded-lg flex items-center justify-center">
                <span class="material-symbols-outlined text-white" style="color: white;">terminal</span>
            </div>
            <div>
                <h1 class="text-white text-lg font-bold leading-tight">Admin Panel</h1>
                <p class="text-slate-500 text-xs">Portfolio Manager</p>
            </div>
        </div>

        <nav class="flex-1 overflow-y-auto px-3 py-4 space-y-1 custom-scrollbar">

            <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg transition-colors @(currentController == "Dashboard" ? "text-white sidebar-item-active" : "text-slate-400 hover:text-white hover:bg-slate-800")" href="/Dashboard/Index">
                <span class="material-symbols-outlined @(currentController == "Dashboard" ? "active-icon" : "")">dashboard</span>
                <span class="text-sm font-medium @(currentController == "Dashboard" ? "font-semibold" : "font-medium")">Dashboard</span>
            </a>

            <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg transition-colors @(currentController == "About" ? "text-white sidebar-item-active" : "text-slate-400 hover:text-white hover:bg-slate-800")" href="/About/AboutList">
                <span class="material-symbols-outlined @(currentController == "About" ? "active-icon" : "")">person</span>
                <span class="text-sm font-medium">Hakkımda</span>
            </a>

            <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg transition-colors @(currentController == "Experience" ? "text-white sidebar-item-active" : "text-slate-400 hover:text-white hover:bg-slate-800")" href="/Experience/ExperienceList/">
                <span class="material-symbols-outlined @(currentController == "Experience" ? "active-icon" : "")">work</span>
                <span class="text-sm font-medium">Deneyimler</span>
            </a>

            <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg transition-colors @(currentController == "Service" ? "text-white sidebar-item-active" : "text-slate-400 hover:text-white hover:bg-slate-800")" href="#">
                <span class="material-symbols-outlined @(currentController == "Service" ? "active-icon" : "")">code</span>
                <span class="text-sm font-medium">Hizmetlerim</span>
            </a>

            <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg transition-colors @(currentController == "Portfolio" ? "text-white sidebar-item-active" : "text-slate-400 hover:text-white hover:bg-slate-800")" href="/Portfolio/PortfolioList">
                <span class="material-symbols-outlined @(currentController == "Portfolio" ? "active-icon" : "")">layers</span>
                <span class="text-sm font-semibold">Projeler</span>
            </a>

            <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg transition-colors @(currentController == "Reference" ? "text-white sidebar-item-active" : "text-slate-400 hover:text-white hover:bg-slate-800")" href="#">
                <span class="material-symbols-outlined @(currentController == "Reference" ? "active-icon" : "")">forum</span>
                <span class="text-sm font-medium">Referanslar</span>
            </a>

            <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg transition-colors @(currentController == "Message" ? "text-white sidebar-item-active" : "text-slate-400 hover:text-white hover:bg-slate-800")" href="/Message/MessageList">
                <span class="material-symbols-outlined @(currentController == "Message" ? "active-icon" : "")">mail</span>
                <span class="text-sm font-medium">Mesajlar</span>
            </a>

        </nav>

        <div class="p-4 border-t border-slate-800 space-y-1">
            <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-400 hover:text-white hover:bg-slate-800 transition-colors" href="#">
                <span class="material-symbols-outlined">settings</span>
                <span class="text-sm font-medium">Ayarlar</span>
            </a>
            <a class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-red-400 hover:text-red-300 hover:bg-red-900/20 transition-colors" href="#">
                <span class="material-symbols-outlined" style="color: inherit;">logout</span>
                <span class="text-sm font-medium">Çıkış Yap</span>
            </a>
        </div>
    </aside>

    <main class="ml-64 flex-1 flex flex-col h-screen">
        <header class="h-16 border-b border-slate-800 bg-background-dark/80 backdrop-blur-md flex items-center justify-between px-8 sticky top-0 z-40">
            <div class="flex items-center gap-4">
                <h2 class="text-white text-lg font-bold leading-tight tracking-tight">
                    @(currentController == "Portfolio" ? "Projeler" :
                                        currentController == "Dashboard" ? "Dashboard" :
                                        currentController == "About" ? "Hakkımda" :
                                        currentController == "Experience" ? "Deneyimler" :
                                        currentController == "Message" ? "Mesajlar" : "Admin Panel")
                </h2>
            </div>
            <div class="flex items-center gap-6">

                <div class="flex items-center gap-1">

                    <a href="/Portfolio/PortfolioList" class="relative p-2 text-slate-400 hover:text-white transition-colors group" title="Toplam Projeler">
                        <span class="material-symbols-outlined group-hover:text-primary transition-colors">layers</span>
                        <span class="absolute top-1 right-1 flex h-4 w-4 items-center justify-center rounded-full bg-primary text-[10px] font-bold text-white ring-2 ring-background-dark">
                            12
                        </span>
                    </a>

                    <a href="/Message/MessageList" class="relative p-2 text-slate-400 hover:text-white transition-colors group" title="Okunmamış Mesajlar">
                        <span class="material-symbols-outlined group-hover:text-red-400 transition-colors">mail</span>
                        <span class="absolute top-1 right-1 flex h-4 w-4 items-center justify-center rounded-full bg-red-500 text-[10px] font-bold text-white ring-2 ring-background-dark animate-pulse">
                            5
                        </span>
                    </a>

                </div>

                <div class="flex items-center gap-3">
                    <div class="text-right">
                        <p class="text-white text-sm font-bold">Admin</p>
                        <p class="text-slate-500 text-xs">Super User</p>
                    </div>
                    <div class="size-10 rounded-full border-2 border-primary/30 p-0.5">
                        <div class="h-full w-full rounded-full bg-cover bg-center" style="background-image: url('https://i.pravatar.cc/150?img=11');"></div>
                    </div>
                </div>

            </div>
        </header>
        @RenderBody()
    </main>
</body>
</html>