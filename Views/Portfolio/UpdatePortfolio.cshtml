@model ResumeProjectDemoNight.Entities.Portfolio
@{
    ViewData["Title"] = "CreatePortfolio";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Proje Güncelleme Sayfası</h1>

<form method="post">
    <input type="hidden" asp-for="PortfolioId" />
    <label>Başlık</label>
    <input type="text" asp-for="ProjectTitle" style="color:purple" />
    <br />
    <label>Görsel URL</label>
    <input type="text" asp-for="ImageUrl" style="color:brown" />
    <br />
    <button> Projeyi Güncelle</button>

</form>