@model List<ResumeProjectDemoNight.Entities.About>
@{
    ViewData["Title"] = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-6xl mx-auto space-y-8">
        <!-- Welcome Section -->
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Hakkımda Listesi</h3>
                <p class="text-slate-400 text-sm mt-1">
                    Hakkımda bilgileriyle ilgili işlemleri bu sayfadan gerçekleştirebilirsiniz.
                </p>
            </div>
            <a href="/About/CreateAbout/"
               class="flex items-center gap-2 bg-primary hover:bg-primary/90 text-white px-5 py-2.5 rounded-lg font-bold text-sm transition-all shadow-lg shadow-primary/20">
                <span class="material-symbols-outlined text-white" style="font-size: 20px;">add</span>
                Yeni Hakkımda Girişi
            </a>
        </div>

        <!-- About Table Card -->
        <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-2xl">
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="bg-slate-900/50">
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">#</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">Ad Soyad</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">Görsel</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">Açıklama</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider text-right">Sil</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider text-right">Güncelleme</th>
                        </tr>
                    </thead>

                    <tbody class="divide-y divide-slate-800">
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-slate-800/30 transition-colors group">
                                <td class="px-6 py-5">@item.AboutId</td>
                                <td class="px-6 py-5">@item.NameSurname</td>
                                <td class="px-6 py-5">
                                    <img src="@item.ImageUrl" class="w-16 h-16 rounded-lg object-cover border border-slate-700" />
                                </td>
                                <td class="px-6 py-5">@item.Description</td>
                                <td class="px-6 py-5 text-right">
                                    <a href="/About/DeleteAbout/@item.AboutId">Sil</a>
                                </td>
                                <td class="px-6 py-5 text-right">
                                    <a href="/About/UpdateAbout/@item.AboutId">Güncelleme</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Footer -->
            <div class="px-6 py-4 bg-slate-900/30 flex items-center justify-between border-t border-slate-800">
                <span class="text-slate-500 text-xs font-medium uppercase tracking-wider">
                    Toplam @Model.Count Adet Hakkımda Kaydı Listeleniyor
                </span>
                <div class="flex gap-2">
                    <button class="px-3 py-1.5 rounded border border-slate-700 text-slate-400 hover:text-white transition-colors text-xs font-bold">
                        Önceki
                    </button>
                    <button class="px-3 py-1.5 rounded border border-slate-700 text-slate-400 hover:text-white transition-colors text-xs font-bold">
                        Sonraki
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
